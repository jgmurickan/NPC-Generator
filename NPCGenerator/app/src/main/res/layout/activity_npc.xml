<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_npc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mobilegroup1.npcgenerator.NPCActivity">

    <TextView
        android:text="npcName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/npcName"
        android:textSize="18sp"
        android:layout_marginTop="21dp" />




    <TextView
        android:text="npcGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npcGender"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/npcName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="npcRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npcRace"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:layout_below="@+id/npcGender"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="npcTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npcTop"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/npcRace"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="npcBottoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npcBottoms"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/npcTop"
        android:layout_centerHorizontal="true" />

   <!-- <Button
        android:text="@string/save_npc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/saveNPC"
        android:onClick="saveNPC" /> -->


</RelativeLayout>
